% Generates "R^[1] ---> R^[2]" (function over real numbers). The two arguments are the exponents of the two 'Real' symbols. If the exponent is 1, it is not displayed.
\newcommand{\rtor}[2]{%
  \IfInteger{#1}{%
    \ifboolexpr{ test {\ifnumcomp{#1}{=}{1}} }%
      {\IfInteger{#2}{%
         \ifboolexpr{ test {\ifnumcomp{#2}{=}{1}} }%
           {\Real\rightarrow\Real}%
           {\Real\rightarrow\Real^{#2}}}%
         {\Real\rightarrow\Real^{#2}}}%
      {\IfInteger{#2}{%
         \ifboolexpr{ test {\ifnumcomp{#2}{=}{1}} }%
           {\Real^{#1}\rightarrow\Real}%
           {\Real^{#1}\rightarrow\Real^{#2}}}%
         {\Real^{#1}\rightarrow\Real^{#2}}}}%
  {\IfInteger{#2}{%
     \ifboolexpr{ test {\ifnumcomp{#2}{=}{1}} }%
       {\Real^{#1}\rightarrow\Real}%
       {\Real^{#1}\rightarrow\Real^{#2}}}%
     {\Real^{#1}\rightarrow\Real^{#2}}}}
% adds a third argument (function name) to rtor to generate a full function. e.g. $\frtor{f}{1}{3}$ creates f: R-->R^3
\newcommand{\frtor}[3]{#1:\ \rtor{#2}{#3}}

